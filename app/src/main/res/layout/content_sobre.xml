<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_content_sobre"
    android:background="@color/background"
    android:orientation="vertical"
    android:padding="@dimen/padding_activity">

    <TextView
        android:id="@+id/tv_sobre_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome do Filme"
        android:textColor="@android:color/white"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sobre_ano"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1940"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/tv_sobre_duracao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="1h 40"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <RatingBar
        android:id="@+id/rb_sobre_classificacao"
        style="@style/RatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:isIndicator="true"
        android:numStars="5"
        android:rating="4"
        android:stepSize="0.1" />

    <TextView
        android:id="@+id/tv_sobre_sinopse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Teste"
        android:textColor="@android:color/white" />

</LinearLayout>